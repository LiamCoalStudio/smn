#[ Using ]#
use core;

module std;
use std, io;


#[ Printing ]#

#[     Normal ]#
println "Simon is a cat.";

#[     Colorful ]#
print @color.blue;
println "She has a hat.";
print @color.reset;

#[     Multi-Color! ]#
print @color.yellow;
print "meow ";
print @color.reset;
print @color.red;
print "meow";
println @color.reset;


#[ Variables ]#
set simon_version, @simon.version;
print simon_version;
println " is the version of Simon!";


#[ Functions ]#
test:
    println "test";
;;
test;

#[ Inclusion ]#
.include "alsotest.smn";
cat_things;
