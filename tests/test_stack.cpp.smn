/language: cpp/#
/test/#

uses simon;
uses simon.io;
end uses;

/cpp/ #include <cstring> /#
/cpp/ #include <string> /#

main;
    start_stack;

    push 'a';
    newvar char, a, pop();
    assert a == 'a', "Push and Pop a single byte.";

    push const_cast<char*>("bbbbb"), 5;
    newvar char*, b2, (char*)pop(5);
    /cpp/ int diff = strcmp("bbbbb", b2); /#
    assert diff == 0, "Push and Pop 5 bytes.";

    end_stack;
end func;
